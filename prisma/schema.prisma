generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  CUSTOMER
  CSR
  ADMIN
}

model User {
  id           String   @id @default(uuid())
  fullName     String
  email        String   @unique
  phone        String?
  passwordHash String
  role         UserRole @default(CSR)
  isActive     Boolean  @default(true)

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  lastLoginAt DateTime?

  // Relations
  bookings Booking[]

  @@index([role])
  @@index([isActive])
}

model Room {
  id            Int      @id @default(autoincrement())
  roomNumber    String   @unique
  type          String
  capacity      Int
  pricePerNight Float
  description   String?
  amenities     String[]
  isAvailable   Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  bookings Booking[]
}

model Booking {
  id            Int      @id @default(autoincrement())
  roomId        Int
  customerName  String
  customerEmail String
  customerPhone String
  checkIn       DateTime
  checkOut      DateTime
  totalPrice    Float
  status        String   @default("pending")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  room      Room    @relation(fields: [roomId], references: [id])
  createdBy User?   @relation(fields: [userId], references: [id])
  userId    String?

  @@index([roomId])
  @@index([checkIn, checkOut])
}

model AuditLog {
  id        String   @id @default(uuid())
  actorId   String
  actorRole String
  action    String
  entityId  String?
  meta      Json?
  createdAt DateTime @default(now())
}
